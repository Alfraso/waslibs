<Page
    x:Class="AppStudio.Samples.Uwp.ControlPages.HtmlViewerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AppStudio.Samples.Uwp.ControlPages"
    xmlns:ctrls="using:AppStudio.Samples.Uwp.Controls"
    xmlns:controls="using:AppStudio.Uwp.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <ctrls:DockView>
            <ctrls:DockView.Content>
                <controls:HtmlViewer x:Name="htmlViewer" Padding="12" Source="ms-appx:///Assets/Content/HtmlContent.html" MaxWidth="1024" Foreground="#222" FontSize="18">
                    <controls:HtmlViewer.HeaderTemplate>
                        <DataTemplate>
                            <controls:Relativebox AspectRatio="1.5" MaxHeight="400">
                                <Grid>
                                    <Grid.Background>
                                        <ImageBrush ImageSource="/Assets/Images/Windows10.jpg" Stretch="UniformToFill" />
                                    </Grid.Background>
                                    <controls:Virtualbox VirtualWidth="400" VirtualHeight="150" AlignmentX="Left" AlignmentY="Bottom">
                                        <Border>
                                            <TextBlock Margin="18,12" FontSize="24" TextAlignment="Left" VerticalAlignment="Bottom" Foreground="White" TextWrapping="NoWrap" TextTrimming="WordEllipsis" Text="Welcome to Windows 10. Lorem ipsum dolor sit amet, consectetur adipiscing elit. Phasellus orci velit, dignissim nec sagittis a, bibendum vel justo. Duis vitae odio eu metus molestie placerat in quis nisl. Nunc eget leo et nisl scelerisque ultricies ac sit amet dui. In faucibus molestie ullamcorper. Ut libero nisl, placerat non volutpat a, lobortis et mauris. Donec egestas quam et quam pharetra bibendum congue turpis tempor. Morbi risus risus, lacinia sollicitudin ullamcorper in, sollicitudin eget purus. Morbi nec ligula est. Donec quis placerat velit. Etiam a eros elit. Proin libero lectus, suscipit id facilisis ut, faucibus vel dolor. Mauris laoreet ultrices arcu, et fermentum tortor tempus ut." />
                                        </Border>
                                    </controls:Virtualbox>
                                </Grid>
                            </controls:Relativebox>
                        </DataTemplate>
                    </controls:HtmlViewer.HeaderTemplate>
                    <controls:HtmlViewer.FooterTemplate>
                        <DataTemplate>
                            <Grid>
                                <Image Source="/Assets/Images/Windows10.jpg" Height="400" Stretch="UniformToFill" HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Grid>
                        </DataTemplate>
                    </controls:HtmlViewer.FooterTemplate>
                </controls:HtmlViewer>
            </ctrls:DockView.Content>
            <ctrls:DockView.Pane>
                <StackPanel Margin="28,24,12,24">
                    <ctrls:PropertySet Source="{Binding ElementName=htmlViewer}" Property="IsHeaderVisible" Value="{Binding IsHeaderVisible, ElementName=htmlViewer, Mode=TwoWay}" />
                    <ctrls:PropertySet Source="{Binding ElementName=htmlViewer}" Property="IsFooterVisible" Value="{Binding IsFooterVisible, ElementName=htmlViewer, Mode=TwoWay}" />
                    <ctrls:PropertySet Source="{Binding ElementName=htmlViewer}" Property="ContentAlignment" Value="{Binding ContentAlignment, ElementName=htmlViewer, Mode=TwoWay}" />
                    <ctrls:PropertySet Source="{Binding ElementName=htmlViewer}" Property="FontSize" Value="{Binding FontSize, ElementName=htmlViewer, Mode=TwoWay}" Minimun="10" Maximun="50" />
                    <ctrls:PropertySet Source="{Binding ElementName=htmlViewer}" Property="Foreground" Value="{Binding Foreground, ElementName=htmlViewer, Mode=TwoWay}" />
                    <ctrls:PropertySet Source="{Binding ElementName=htmlViewer}" Property="Background" Value="{Binding Background, ElementName=htmlViewer, Mode=TwoWay}" />
                    <ctrls:PropertySet Source="{Binding ElementName=htmlViewer}" Property="MaxWidth" Value="{Binding MaxWidth, ElementName=htmlViewer, Mode=TwoWay}" Minimun="640" Maximun="1920" />
                    <TextBox AcceptsReturn="True" Text="{Binding Html, ElementName=htmlViewer, Mode=TwoWay}" />
                </StackPanel>
            </ctrls:DockView.Pane>
        </ctrls:DockView>
    </Grid>
</Page>
