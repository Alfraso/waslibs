<Page
    x:Class="AppStudio.Samples.Uwp.ControlPages.HtmlViewerPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AppStudio.Samples.Uwp.ControlPages"
    xmlns:controls="using:AppStudio.Uwp.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <controls:HtmlViewer Source="ms-appx:///Assets/HtmlContent.html" MaxWidth="1024"
                               Background="#eee" Foreground="#222" FontSize="18">
            <controls:HtmlViewer.HeaderTemplate>
                <DataTemplate>
                    <Image Source="/Assets/Images/Windows10.jpg" Height="400" Stretch="UniformToFill" HorizontalAlignment="Center" VerticalAlignment="Center" />
                </DataTemplate>
            </controls:HtmlViewer.HeaderTemplate>
            <controls:HtmlViewer.FooterTemplate>
                <DataTemplate>
                    <Grid>
                        <Image Source="/Assets/Images/Windows10.jpg" Height="400" Stretch="UniformToFill" HorizontalAlignment="Center" VerticalAlignment="Center" />
                    </Grid>
                </DataTemplate>
            </controls:HtmlViewer.FooterTemplate>
        </controls:HtmlViewer>
    </Grid>
</Page>
