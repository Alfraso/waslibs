<UserControl
    x:Class="AppStudio.Uwp.Samples.About"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AppStudio.Uwp.Samples"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{StaticResource AppBackground}">
        <ScrollViewer ScrollViewer.VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <RichTextBlock Margin="24" TextWrapping="Wrap" Foreground="{StaticResource AppForeground}">
                    <Paragraph>
                        <Run FontSize="32" Text="Windows App Studio UWP Open Source Library" />
                    </Paragraph>
                    <Paragraph/>
                    <Paragraph>
                        <Run Text="Esta aplicación muestra los controles y clases disponibles en la librería de controles de Windows App Studio. El código de estos controles está disponible en el siguiente enlace."/>
                    </Paragraph>
                    <Paragraph/>
                    <Paragraph>
                        <Hyperlink NavigateUri="https://github.com/wasteam/waslibs/">https://github.com/wasteam/waslibs/</Hyperlink>
                    </Paragraph>
                    <Paragraph/>
                    <Paragraph>
                        <Run Text="Esta aplicación hace uso de las siguientes librerías:"/>
                    </Paragraph>
                    <Paragraph/>
                    <Paragraph>
                        <Hyperlink NavigateUri="http://www.newtonsoft.com/json">Newtonsoft Json</Hyperlink>
                    </Paragraph>
                    <!--<Paragraph LineHeight="1"/>-->
                    <Paragraph Margin="0,0,0,0">
                        <Hyperlink NavigateUri="https://github.com/google/code-prettify">Code Prettify</Hyperlink>
                    </Paragraph>
                    <Paragraph/>
                    <Paragraph>
                        <Run Text="Todas las aplicaciones creadas con Windows App Studio, utilizan estas librerías para obtener datos y visualizar datos en las diferentes páginas. Si aún no has probado Windows App Studio, puedes crear tu primera App ahora!"/>
                    </Paragraph>
                    <Paragraph/>
                    <Paragraph>
                        <Hyperlink NavigateUri="https://appstudio.windows.com/">https://appstudio.windows.com/</Hyperlink>
                    </Paragraph>
                    <Paragraph/>
                </RichTextBlock>
                <Image Source="/Assets/Images/AppStudio.png" Stretch="Uniform" Margin="12"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
