<UserControl
    x:Class="AppStudio.Uwp.Samples.AnimationExtensionsHelp"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AppStudio.Uwp.Samples"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{StaticResource AppBackground}">
        <ScrollViewer ScrollViewer.VerticalScrollBarVisibility="Auto">
            <RichTextBlock Margin="24" TextWrapping="Wrap" Foreground="{StaticResource AppForeground}">
                <Paragraph>
                    <Run FontSize="32" Text="AnimationExtensions Help" />
                </Paragraph>
                <Paragraph />
                <Paragraph>
                    <Run Text="AnimationExtension es un conjunto de métodos que permiten a cualquier FrameworkElement ejecutar animaciones desde C# para sus propiedades. Las animaciones pueden ser invocadas de forma asíncrona."/>
                </Paragraph>
                <Paragraph />
            </RichTextBlock>
        </ScrollViewer>
    </Grid>
</UserControl>
