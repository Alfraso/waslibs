<local:SamplePage
    x:Class="AppStudio.Uwp.Samples.ImageExPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AppStudio.Uwp.Samples"
    xmlns:controls="using:AppStudio.Uwp.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <DataTemplate x:Key="BingTemplate">
            <Grid Background="{Binding}" BorderBrush="Black" BorderThickness="1">
                <controls:ImageEx Source="{Binding}" Stretch="UniformToFill" HorizontalAlignment="Center" VerticalAlignment="Center" />
            </Grid>
        </DataTemplate>
    </Page.Resources>

    <Grid Background="{StaticResource AppBackground}">
        <controls:VariableSizedGrid Name="control" Margin="0" ItemsSource="{Binding Items}" ItemTemplate="{Binding ItemTemplate}"
                                    Orientation="Horizontal" MaximumRowsOrColumns="8" AspectRatio="1"
                                    HorizontalAlignment="Left" VerticalAlignment="Top" />
    </Grid>
</local:SamplePage>
