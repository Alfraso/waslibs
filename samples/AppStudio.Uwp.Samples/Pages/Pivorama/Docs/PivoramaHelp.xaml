<UserControl
    x:Class="AppStudio.Uwp.Samples.PivoramaHelp"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AppStudio.Uwp.Samples"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{StaticResource AppBackground}">
        <ScrollViewer ScrollViewer.VerticalScrollBarVisibility="Auto">
            <RichTextBlock Margin="24" TextWrapping="Wrap" Foreground="{StaticResource AppForeground}">
                <Paragraph>
                    <Run FontSize="32" Text="Pivorama Help" />
                </Paragraph>
                <Paragraph/>
                <Paragraph>
                    <Run Text="El Pivorama es un control que permite la visualización de elementos utilizando una disposición horizontal. El pivorama permite visualizar el segundo elemento cuando el primero se ve por completo y ocultarlo cuando no."/>
                </Paragraph>
            </RichTextBlock>
        </ScrollViewer>
    </Grid>
</UserControl>
