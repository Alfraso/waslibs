<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <DataTemplate x:Key="HomeHeaderTemplate">
        <Grid Background="#444">
            <TextBlock Margin="14,8" Text="{Binding}" TextTrimming="CharacterEllipsis" FontSize="22" Foreground="#ddd" />
        </Grid>
    </DataTemplate>

    <DataTemplate x:Key="DefaultHeaderTemplate">
        <TextBlock Margin="14,8" Text="{Binding}" TextTrimming="CharacterEllipsis" FontSize="22" Foreground="#222" />
    </DataTemplate>
</ResourceDictionary>
