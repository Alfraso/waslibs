<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:AppStudio.Uwp.Controls">

    <Style TargetType="controls:HtmlViewer">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:HtmlViewer">
                    <Grid Background="{TemplateBinding Background}">
                        <Grid Name="webViewContainer" />
                        <Grid Name="glass" ManipulationMode="All" />
                        <Canvas>
                            <ContentPresenter Name="header" ContentTemplate="{TemplateBinding HeaderTemplate}" Content="{TemplateBinding Header}" Foreground="{TemplateBinding Foreground}" HorizontalAlignment="Left" VerticalAlignment="Top" ManipulationMode="TranslateY, TranslateInertia" />
                            <ContentPresenter Name="footer" ContentTemplate="{TemplateBinding FooterTemplate}" Content="{TemplateBinding Footer}" Foreground="{TemplateBinding Foreground}" HorizontalAlignment="Left" VerticalAlignment="Top" ManipulationMode="TranslateY, TranslateInertia" />
                            <ContentPresenter Name="asideleft" ContentTemplate="{TemplateBinding ASideLeftTemplate}" Content="{TemplateBinding ASideLeft}" Foreground="{TemplateBinding Foreground}" HorizontalAlignment="Left" VerticalAlignment="Top" ManipulationMode="TranslateY, TranslateInertia" MaxWidth="{TemplateBinding ASideLeftMaxWidth}"/>
                            <ContentPresenter Name="asideright" ContentTemplate="{TemplateBinding ASideRightTemplate}" Content="{TemplateBinding ASideRight}" Foreground="{TemplateBinding Foreground}" HorizontalAlignment="Left" ManipulationMode="TranslateY, TranslateInertia" MaxWidth="{TemplateBinding ASideRightMaxWidth}"/>
                        </Canvas>
                        <Grid.Clip>
                            <RectangleGeometry x:Name="clip" />
                        </Grid.Clip>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
