<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:AppStudio.Uwp.Controls">

    <Style TargetType="controls:Pivorama">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:Pivorama">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Canvas Name="header">
                            <Grid Name="headerItems" />
                        </Canvas>
                        <StackPanel Name="tabItems" Orientation="Horizontal" />
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <Canvas Name="container" />
                        </ScrollViewer>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="controls:PivoramaItem">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:PivoramaItem">
                    <ContentPresenter />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
