<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:AppStudio.Uwp.Labs">

    <Style TargetType="controls:Mosaic">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:Mosaic">
                    <ScrollViewer VerticalScrollBarVisibility="Hidden">
                        <controls:MosaicPanel x:Name="panel" ItemsSource="{TemplateBinding ItemsSource}" ItemTemplate="{TemplateBinding ItemTemplate}" SeedWidth="{TemplateBinding SeedWidth}" />
                    </ScrollViewer>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
